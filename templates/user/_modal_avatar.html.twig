<div class="modal" id="modal-avatar">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            {{ form_start(form) }}
            <div class="modal-header modal-avatar">
                <h5 class="modal-title"><i class="bi bi-person-circle me-2"></i><span>Modifier votre avatar</span></h5>
            </div>
            <div class="modal-body">
                {{ form_widget(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal"><span>Annuler</span>
                </button>
                <button type="submit" class="btn btn-submit"><span>Valider</span></button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
