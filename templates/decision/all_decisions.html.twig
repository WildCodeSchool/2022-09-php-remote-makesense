{% extends 'base.html.twig' %}

{% block title %}Toutes les décisions - Makesense{% endblock %}

{% block body %}


    <div class="container">
        <h1>Toutes les décisions</h1>

        <div class="jumbotron bg-primary m-1 rounded-4">
            <div class="container">
                {{ form_start(form) }}
                <div class="row justify-content-center custom-line">
                    <div class ="row justify-content-center custom-line m-3">
                        <h3 class="text-center text-secondary text">Filtrer par statut en cours</h3>
                    </div>
                    <div class ="d-inline-flex justify-content-center m-3">
                        <div>{{ form_row(form.search) }}</div>
                        <div><button class="btn btn-secondary text-primary mx-3 mb-0 p-1 mt-1"><i class="bi bi-search me-2"></i><span> Rechercher</span></button></div>
                    </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="row justify-content-center custom-line">
            {% for decision in decisions %}
                <div class="card col-sm-10 col-md-5 col-lg-3 m-3">
                    {% for timeline in decision.timelines %}
                        {% if loop.first %}
                            <div class="card-header bg-transparent border-dark me-2">
                                {{ timeline.name }}
                                <br><i class="bi bi-calendar2-week-fill text-success me-2"></i><span class="text-success">Le : {{ timeline.endedAt |date('d/m/Y') }}</span>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <div class="card-body text-success">
                        <h5 class="card-title">{{ decision.title }}</h5>
                    </div>
                    <div class="card-footer bg-transparent border-dark">
                        <img src ="https://picsum.photos/id/236/30/30" alt="{{ decision.user.firstName }} {{ decision.user.lastName }}"
                             title="{{ decision.user.firstName }} {{ decision.user.lastName }}" class="rounded-circle"/>
                        {{ decision.user.firstName }} {{ decision.user.lastName }}
                        <br><a href="{{ path('app_decision_show', {id: decision.id }) }}"
                               class="stretched-link"></a>
                    </div>

                </div>
            {% else %}
                <h3>Aucune décision</h3>

            {% endfor %}
        </div>

        <div class ="d-flex justify-content-center">
            {{ knp_pagination_render(decisions) }}
        </div>
    </div>

{% endblock %}
