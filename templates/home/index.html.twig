{% extends 'base.html.twig' %}

{% block title %}Accueil - Makesense{% endblock %}

{% block body %}
    <h1>Bonjour {{ app.user.firstName }}</h1>

    <div class="home">
        <div class="container">
            <h2>Mes d√©cisions √† venir</h2>
            <div class="row justify-content-start custom-line">
                {% for userDecision in userDecisions %}
                    <div class="card col-sm-10 col-md-5 col-lg-3 m-3">
                        {% for timeline in userDecision.timelines %}
                            {% if loop.first %}
                                <div class="card-header bg-transparent border-dark">
                                    Prochaine √©tape :
                                    <br>{{ timeline.name }}
                                    <br><i class="bi bi-calendar2-week-fill text-success me-2"> Le
                                        : {{ timeline.endedAt |date('d/m/Y') }}</i>
                                </div>
                            {% endif %}
                        {% endfor %}
                        <div class="card-body">
                            <h5 class="card-title text-primary">{{ userDecision.title }}</h5>
                        </div>
                        <div class="card-footer bg-transparent border-dark">
                            <br><a href="{{ path('app_decision_show', {id: userDecision.id }) }}"
                                   class="stretched-link"></a>
                        </div>
                    </div>

                {% else %}
                    <div class="text-center">
                        <img class="img-fluid" src="{{ asset('build/images/no-decision.png') }}">
                        <p>Dommage...Il serait temps de cr√©er un projet !</p>
                        <button class="btn btn-primary rounded-3 text-white">Cr√©er un nouveau projet</button>
                    </div>

                {% endfor %}
            </div>

            <br><a href="{{ path('app_decision_mine') }}">Voir toutes mes d√©cisions üí´</a>

            <h2 class="mt-5">Mes contributions √† venir</h2>
            <div class="row justify-content-start custom-line">
                {% for userContribution in userContributions %}
                {% if userContribution.decision.user.id != app.user.id %}

                <div class="card col-sm-10 col-md-5 col-lg-3 m-3">
                    <div class="card-header bg-transparent border-dark">
                        {{ userContribution.name }}
                        <br><i class="bi bi-calendar2-week-fill text-success me-2"> Le
                            : {{ userContribution.endedAt |date('d/m/Y') }}</i>
                    </div>
                    <div class="card-body text-primary">
                        <h5 class="card-title">{{ userContribution.decision.title }}</h5>
                    </div>
                    <div class="card-footer bg-transparent border-dark">
                        <img src="https://picsum.photos/id/236/30/30"
                             alt="{{ userContribution.decision.user.firstName }} {{ userContribution.decision.user.lastName }}"
                             title="{{ userContribution.decision.user.firstName }} {{ userContribution.decision.user.lastName }}"
                             class="rounded-circle"/>
                        {{ userContribution.decision.user.firstName }} {{ userContribution.decision.user.lastName }}
                        <br><a href="{{ path('app_decision_show', {id: userContribution.decision.id }) }}"
                               class="stretched-link"></a>
                    </div>
                </div>
            {% endif %}
            {% else %}
                <p>Aucune contribution en cours</p>
            {% endfor %}
            </div>
            <br><a href="{{ path('app_contributor_decisions') }}">Voir toutes mes contributions ‚≠êÔ∏è</a>
        </div>
    </div>
{% endblock %}
