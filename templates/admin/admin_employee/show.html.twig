{% extends 'admin/base.html.twig' %}

{% block title %}{{ employee.lastname }} {{ employee.firstname }} - Détails de l'employé{% endblock %}

{% block body %}
    <h1>Détails de l'employé</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ employee.lastname }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ employee.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_employee_edit', {'id': employee.id}) }}" class="btn btn-warning mx-2"><i class="bi bi-gear me-2"></i><span>Modifier</span></a>

    {{ include('admin/admin_employee/_delete_form.html.twig') }}

    <a href="{{ path('app_admin_employee_index') }}"><i class="bi bi-arrow-return-left me-2"></i><span>Retour à la liste</span></a>
{% endblock %}
