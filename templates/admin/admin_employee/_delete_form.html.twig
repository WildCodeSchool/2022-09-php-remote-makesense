<form method="post" action="{{ path('app_admin_employee_delete', {'id': employee.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet employé ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
    <button class="btn btn-danger m-2"><i class="bi bi-person-x me-2"></i><span>Supprimer l'employé</span></button>
</form>
